{
  "extends": ["plugin:svelte/all", "plugin:svelte/prettier", "eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "extraFileExtensions": [".svelte"]
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      }
    }
  ],
  "settings": {
    "compileOptions": {
      "postcss": {
        "configFilePath": "postcss.config.cjs"
      }
    }
  },
  "ignorePatterns": ["postcss.config.cjs", "svelte.config.js", "tailwind.config.cjs"],
  "rules": {
    "svelte/no-unused-class-name": "off",
    "svelte/block-lang": "off",
    "svelte/experimental-require-strict-events": "off",
    "no-undef": "off",
    "no-inner-declarations": "off",
    "no-self-assign": "off"
  }
}
