/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

h2 {
	@apply text-2xl font-semibold mb-3;
}

.stats {
	@apply bg-primary rounded-md;
}

.stat-title {
	@apply text-sm text-secondary text-opacity-60;
}

.stat-value {
	@apply text-xl font-bold text-secondary;
}

.btn {
	@apply disabled:text-white;
}
